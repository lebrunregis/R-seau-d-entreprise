<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Enterprise Social Network</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <a class="navbar-brand" href="#">Enterprise Social Network</a>
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse"  id="myNavbar">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@{Html.RenderAction("_ToAdminLink", "Profile");}</li> 
                        <li>@Html.ActionLink("Calendar", "Calendar", "Home", new {  }, new
                                        {
                                            @class = "glyphicon glyphicon-calendar btn"
                                        })</li> 
                        <li>@Html.ActionLink(" Profile", "Edit", "Profile", new {  }, new
                                       {
                                           @class = "glyphicon glyphicon-user btn"
                                       })</li>
                        <li>@Html.ActionLink(" Inbox", "Mailbox", "Message", new {  }, new
                                       {
                                           @class = "glyphicon glyphicon-envelope btn"
                                       })</li>
                        
                        <li>@Html.ActionLink(" Logout", "Logout", "Registration", new { area = "" }, new
                                            {
                                            @class = "glyphicon glyphicon-log-out btn btn-warning"
                                            })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                        <li>@Html.ActionLink("Tasks", "Index", "Task")</li>
                        <li>@Html.ActionLink("Events", "Index", "Event")</li>
                        <li>@Html.ActionLink("Departments", "Index", "Department")</li>
                    </ul>
                </div>
            </div>
        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Enterprise Social Network</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="/Content/fullcalendar.css" rel="stylesheet" />
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/fullcalendar.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/hubs"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
