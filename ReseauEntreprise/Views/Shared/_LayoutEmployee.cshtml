<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Enterprise Social Network</title>
    @Styles.Render("~/Content/css")

</head>
<body>
    <div class="navbar navbar-fixed-top">
        <a class="navbar-brand" href="#">Enterprise Social Network</a>
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse"  id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li>@{Html.RenderAction("_ToAdminLink", "Profile");}</li>
                    <li>
                        <a href="@Url.Action( "Calendar", "Home")" class="btn" ">
                            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
                            Calendar
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Edit", "Profile")" class="btn" ">
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                           My Profile
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Mailbox", "Message")" class="btn"">
                            <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                            Mailbox
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Logout", "Registration", new { area = "" })" class="btn btn-warning" style="color:black">
                            <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
                            Logout
                        </a>
                    </li>
                </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Teams", "Index", "Team")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employee")</li>
                        <li>@Html.ActionLink("Projects", "Index", "Project")</li>
                        <li>@Html.ActionLink("Tasks", "Index", "Task")</li>
                        <li>@Html.ActionLink("Events", "Index", "Event")</li>
                        <li>@Html.ActionLink("Departments", "Index", "Department")</li>
                    </ul>
                </div>
            </div>
        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Enterprise Social Network</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="/Content/fullcalendar.css" rel="stylesheet" />
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/fullcalendar.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.0.min.js"></script>
    <script src="~/signalr/hubs"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
