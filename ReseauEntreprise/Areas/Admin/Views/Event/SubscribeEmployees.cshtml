@model IEnumerable<ReseauEntreprise.Areas.Admin.Models.ViewModels.Event.EmployeeSelectorForm>

@{
    ViewBag.Title = "SubscribeEmployees";
}

<h2>SubscribeEmployees</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>EmployeeSelectorForm</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table class="table" >
        <tr>

                <th class="col-md-3">@Html.LabelFor(item => Model.FirstOrDefault().Identifier, htmlAttributes: new { @class = "control-label col-md-2" })</th>

                <th class="col-md-1">@Html.LabelFor(item => Model.FirstOrDefault().Selected, htmlAttributes: new { @class = "control-label col-md-2" })</th>

        </tr>
        @foreach (var Item in Model)
        {
        <tr>
            @Html.HiddenFor(item => Item.EmployeeId)
            <td>
                <div class="form-group col-md-3">

                        @Html.DisplayFor(item => Item.Identifier, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(item => Item.Identifier, "", new { @class = "text-danger" })

                </div>
            </td>
            <td>
                <div class="form-group col-md-1">

                        <div class="checkbox">
                            @Html.EditorFor(item => Item.Selected, new { htmlAttributes = new { @class = "form-check-input" } })
                            @Html.ValidationMessageFor(item => Item.Selected, "", new { @class = "text-danger" })
                        </div>

                </div>
            </td>
                @Html.HiddenFor(item => Item.EventId)
        </tr>
        }
    </table>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
