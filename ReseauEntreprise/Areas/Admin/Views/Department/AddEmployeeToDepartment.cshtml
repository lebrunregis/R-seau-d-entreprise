@model ReseauEntreprise.Areas.Admin.Models.ViewModels.EmployeeDepartment.AddEmployeeToDepartmentForm

@{
    ViewBag.Title = "Add Employee To Department";
}

<h2>Add Employee To Department</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SelectedEmployeeId)
    <div class="form-group">
        @Html.LabelFor(model => model.SelectedDepartmentId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.SelectedDepartmentId, new SelectList(Model.DepartmentList, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "Department" })
            @Html.ValidationMessageFor(model => model.SelectedDepartmentId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Add" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink(linkText: "Back to Employee list", actionName: "Index", controllerName: "Employee")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
