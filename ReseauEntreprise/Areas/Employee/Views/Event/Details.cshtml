@model ReseauEntreprise.Areas.Employee.Models.ViewModels.Event.DetailsForm

@{
    ViewBag.Title = "Event Details";
}

<h2>Event Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatorId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatorId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DepartmentId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            <a href=@($"https://www.google.com/maps/search/{Model.Address.Replace(" ","+")}/")>
                @Html.DisplayFor(model => model.Address)
            </a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OpenSubscription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OpenSubscription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subscribed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subscribed)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Documents)
        </dt>

        <dd>
            @{Html.RenderPartial("_DocumentList", Model.Documents);}
            <p>Create new document</p>
            @{Html.RenderAction("_Upload", "Document", new { EventId = Model.Id });}
        </dd>

    </dl>
</div>
<p>
    @if (!Model.Subscribed && Model.OpenSubscription)
    {
        @Html.ActionLink("Subscribe to Event", "ConfirmSubscription", new { id = Model.Id })
    }
    else if (Model.Subscribed)
    {
        <div> Already subscribed.</div>
    }
    else
    {
        <div>You cannot subscribe to this event.</div>
    }
    @Html.ActionLink("Back to Event list", "Index")
</p>
