@model IEnumerable<ReseauEntreprise.Areas.Employee.Models.ViewModels.Department.ListForm>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HeadOfDepartment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Created)
        </td>
        <td style="white-space: pre-wrap;">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
		<td>
			@if (item.HeadOfDepartment != null)
			{
				{Html.RenderPartial("_Employee", item.HeadOfDepartment);}
			}
		</td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
